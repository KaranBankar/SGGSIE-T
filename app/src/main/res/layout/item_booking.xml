<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bookingCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Event Name -->
        <TextView
            android:id="@+id/tvEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Event Date & Time -->
        <TextView
            android:id="@+id/tvEventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 24/02/2025"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvEventTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time: 09:00 AM - 05:00 PM"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Student Info -->
        <TextView
            android:id="@+id/tvStudentName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chaitanya Kakde"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvStudentEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: chaitanu@gmail.com"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tvStudentMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: 9322067937"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />

        <!-- Seat No & Status -->
        <TextView
            android:id="@+id/tvSeatNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Seat No: 02"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@android:color/black" />

        <!-- Download PDF Button -->
        <TextView
            android:id="@+id/tvDownloadPDF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download your ticket: PDF"
            android:textSize="14sp"
            android:textColor="@android:color/holo_blue_dark"
            android:textStyle="bold"
            android:paddingTop="8dp"
            android:clickable="true"
            android:focusable="true" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
