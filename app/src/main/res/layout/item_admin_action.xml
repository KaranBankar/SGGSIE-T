<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="3"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <!-- Exam Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/examModule"
            style="@style/ModuleCardStyle"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/CardContentStyle">
                <ImageView
                    android:src="@drawable/exam"
                    style="@style/CardIconStyle" />

                <TextView
                    android:text="Exam"
                    style="@style/CardTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Reports Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/reportsModule"
            style="@style/ModuleCardStyle"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/CardContentStyle">
                <ImageView
                    android:src="@drawable/reports"
                    style="@style/CardIconStyle" />

                <TextView
                    android:text="Reports"
                    style="@style/CardTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Colleges Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/collegesModule"
            style="@style/ModuleCardStyle"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/CardContentStyle">
                <ImageView
                    android:src="@drawable/collgege"
                    style="@style/CardIconStyle" />

                <TextView
                    android:text="Colleges"
                    style="@style/CardTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Assessments Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/assessmentsModule"
            style="@style/ModuleCardStyle"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/CardContentStyle">
                <ImageView
                    android:src="@drawable/assesment"
                    style="@style/CardIconStyle" />

                <TextView
                    android:text="Assessments"
                    style="@style/CardTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Admission Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/admissionModule"
            style="@style/ModuleCardStyle"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/CardContentStyle">
                <ImageView
                    android:src="@drawable/admission"
                    style="@style/CardIconStyle" />

                <TextView
                    android:text="Admission"
                    style="@style/CardTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Scholarship Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/scholarshipModule"
            style="@style/ModuleCardStyle"
            android:layout_columnWeight="1">

            <LinearLayout style="@style/CardContentStyle">
                <ImageView
                    android:src="@drawable/sponser"
                    style="@style/CardIconStyle" />

                <TextView
                    android:text="Scholarship"
                    style="@style/CardTextStyle" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

</LinearLayout>
