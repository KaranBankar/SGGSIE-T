<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white">

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flexWrap="wrap"
        app:justifyContent="space_between">

        <!-- Card Items -->
        <com.google.android.material.card.MaterialCardView
            style="@style/DashboardCard"
            android:id="@+id/examCard">
            <LinearLayout style="@style/CardContent">
                <ImageView
                    style="@style/CardIcon"
                    android:src="@drawable/ic_exam" />
                <TextView
                    style="@style/CardText"
                    android:text="Exam" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/DashboardCard"
            android:id="@+id/reportsCard">
            <LinearLayout style="@style/CardContent">
                <ImageView
                    style="@style/CardIcon"
                    android:src="@drawable/ic_reports" />
                <TextView
                    style="@style/CardText"
                    android:text="Reports" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/DashboardCard"
            android:id="@+id/collegesCard">
            <LinearLayout style="@style/CardContent">
                <ImageView
                    style="@style/CardIcon"
                    android:src="@drawable/ic_college" />
                <TextView
                    style="@style/CardText"
                    android:text="Colleges" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/DashboardCard"
            android:id="@+id/assessmentCard">
            <LinearLayout style="@style/CardContent">
                <ImageView
                    style="@style/CardIcon"
                    android:src="@drawable/ic_assessment" />
                <TextView
                    style="@style/CardText"
                    android:text="Assessments" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/DashboardCard"
            android:id="@+id/admissionCard">
            <LinearLayout style="@style/CardContent">
                <ImageView
                    style="@style/CardIcon"
                    android:src="@drawable/ic_admission" />
                <TextView
                    style="@style/CardText"
                    android:text="Admission" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            style="@style/DashboardCard"
            android:id="@+id/scholarshipCard">
            <LinearLayout style="@style/CardContent">
                <ImageView
                    style="@style/CardIcon"
                    android:src="@drawable/ic_scholarship" />
                <TextView
                    style="@style/CardText"
                    android:text="Scholarship" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </com.google.android.flexbox.FlexboxLayout>

</LinearLayout>
