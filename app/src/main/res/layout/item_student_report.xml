<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/light_blue_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Header: Student Name & Date -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
           >

            <TextView
                android:id="@+id/tvStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student Name"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/black" />

            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12/02/2025 - 10:30 AM"
                android:textSize="12sp"
                android:textColor="@color/black" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_text"
            android:layout_marginVertical="8dp" />

        <!-- Email Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/mail"
                android:layout_marginEnd="6dp"
                app:tint="@color/gray_text" />

            <TextView
                android:id="@+id/tvStudentEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="email@gmail.com"
                android:textColor="@color/gray_text" />
        </LinearLayout>

        <!-- Contact Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="6dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/call"
                android:layout_marginEnd="6dp"
                app:tint="@color/gray_text" />

            <TextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: 1234567890"
                android:textColor="@color/gray_text" />
        </LinearLayout>

        <!-- Health Issue & Treatment -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
           >

            <TextView
                android:id="@+id/tvHealthIssue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Health Issue: Fever"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tvTreatment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Treatment: Pending"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/red_warning" />
        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description: The student reported fever and headache"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textSize="14sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
