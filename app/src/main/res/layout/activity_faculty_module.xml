<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    tools:context=".FacultyModuleActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/main"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/white"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <!-- Header Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="8dp"
                app:cardBackgroundColor="@android:color/transparent">

                <!-- Background Gradient -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center"
                    android:background="@drawable/gradient_sggs">

                    <!-- College Logo -->
                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/app_logo"
                        android:layout_gravity="center"
                        android:contentDescription="SGGS Logo"
                        android:scaleType="fitCenter" />

                    <!-- College Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SGGS Institute of Engineering &amp; Technology"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_marginTop="8dp" />

                    <!-- Established Year -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Established: 1981"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <!-- Location -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location: Vishnupuri, Nanded, Maharashtra"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                    <!-- College Motto -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motto: 'Excellence in Technical Education'"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:layout_marginTop="4dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp" />


            <!-- Cards Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="3"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <!-- Card Item Template -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/layoutEventAprove"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:layout_gravity="center"
                                android:src="@drawable/event"
                                app:tint="@color/teal_700" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approve Events"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Bottom Border -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/teal_700"
                            android:layout_gravity="bottom" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Complaint Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_complains"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/complain"
                                android:layout_gravity="center"
                                app:tint="@color/red" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View Complents"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Bottom Border -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/red"
                            android:layout_gravity="bottom" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Vote Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/ElectionConduct"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/budget"
                                android:layout_gravity="center"
                                app:tint="#00BCD4" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Conduct Elections"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Bottom Border -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="#00BCD4"
                            android:layout_gravity="bottom" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Health Report Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/healthReport"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/m_doubt"
                                android:layout_gravity="center"
                                app:tint="@color/green" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solve Doubt"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Bottom Border -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@color/green"
                            android:layout_gravity="bottom" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Cheat Records Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/CheatRecords"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/m_cheat"
                                android:layout_gravity="center"
                                app:tint="#4187FF" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cheat Records"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Bottom Border -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="#4187FF"
                            android:layout_gravity="bottom" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Budget Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/leaveApplication"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_margin="8dp"
                        android:layout_columnWeight="1"
                        app:cardElevation="4dp"
                        app:cardCornerRadius="12dp"
                        android:backgroundTint="@android:color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/leavereq"
                                android:layout_gravity="center"
                                app:tint="#3F51B5" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approve Leaves"
                                android:textSize="16sp"
                                android:textColor="@android:color/black"
                                android:textStyle="bold"
                                android:layout_marginTop="8dp"
                                android:gravity="center" />
                        </LinearLayout>

                        <!-- Bottom Border -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="#3F51B5"
                            android:layout_gravity="bottom" />

                    </com.google.android.material.card.MaterialCardView>

                </GridLayout>

            </LinearLayout>

            <!-- Notice Board -->

        </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_drawer_menu"
        android:layout_marginBottom="20dp"
        app:headerLayout="@layout/nav_header" />

</androidx.drawerlayout.widget.DrawerLayout>