<?xml version="1.0" encoding="utf-8"?>
<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:background="@color/background_blue">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="?attr/colorPrimaryContainer"
        android:title="College Budget Dashboard"
        android:titleTextColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_arrow_back" />

    <!-- Total Budget Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/totalBudgetCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topAppBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotalBudgetLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total Budget"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTotalBudget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$50,000"
                android:textAppearance="@style/TextAppearance.Material3.DisplayMedium"
                android:textColor="@android:color/holo_green_dark" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Budget Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/budgetSummaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/totalBudgetCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Remaining Budget -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRemainingLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remaining"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvRemainingBudget"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20,000"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/green" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:background="@color/background_blue" />

            <!-- Total Expenses -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSpentLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Spent"
                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTotalExpenses"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$30,000"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
                    android:textColor="@color/red_warning" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Budget Breakdown Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/budgetBreakdownCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/budgetSummaryCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvBudgetDistribution"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Budget Distribution"
                android:textAppearance="@style/TextAppearance.Material3.TitleMedium" />

            <!-- Education Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvEducationLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Education"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvEducationAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$35,000"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressEducation"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="70"
                    android:backgroundTint="@color/gray_text"
                    android:progressTint="@color/complaint_bg"
                    style="@style/Widget.Material3.LinearProgressIndicator" />
            </LinearLayout>

            <!-- Infrastructure Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvInfrastructureLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Infrastructure"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvInfrastructureAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$25,000"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressInfrastructure"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="50"
                    android:backgroundTint="@color/gray_text"
                    android:progressTint="@color/ios_blue"
                    style="@style/Widget.Material3.LinearProgressIndicator" />
            </LinearLayout>

            <!-- Research Progress -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvResearchLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Research"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvResearchAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$30,000"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/progressResearch"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="60"
                    android:backgroundTint="@color/gray_text"
                    android:progressTint="@color/background_blue"
                    style="@style/Widget.Material3.LinearProgressIndicator" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Budget Usage Chart -->
    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/budgetUsageChart"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/budgetBreakdownCard" />

    <!-- Expense Summary Card -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/expenseSummaryCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/budgetUsageChart">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvExpenseSummary"
                android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expense Summary"
                    android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/expenseRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:nestedScrollingEnabled="false"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addExpenseFab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:contentDescription="Add Expense"
        android:src="@drawable/adddata"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="@color/complaint_bg" />

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
