<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/primary"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:orientation="vertical">

        <!-- Name -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: John Doe"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="4dp"/>

        <!-- Email -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: johndoe@example.com"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Contact -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact: 9876543210"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingBottom="8dp"/>

        <!-- Date & Time -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_report_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 2025-02-19 | Time: 19:22:08"
            android:textAppearance="?attr/textAppearanceBodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant" />

        <!-- Health Issue -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_health_issue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Issue: Fever"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textStyle="bold"
            android:textColor="@color/text_secondary"
            android:paddingTop="4dp" />

        <!-- Description -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description: Feeling weak and tired"
            android:textAppearance="?attr/textAppearanceBodySmall"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:paddingTop="4dp" />

        <!-- Download Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_download_report"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Download Report"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginTop="8dp"
            app:icon="@drawable/user"
            app:iconGravity="start"
            app:iconPadding="8dp"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
