<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/main"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"

    android:backgroundTint="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:background="@color/light_gray">

        <!-- Faculty Name -->
        <TextView
            android:id="@+id/facultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingBottom="4dp" />

        <!-- Faculty Email -->
        <TextView
            android:id="@+id/facultyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="johndoe@college.edu"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/mail"
            android:drawablePadding="6dp"
            android:paddingBottom="2dp" />

        <!-- Faculty Mobile -->
        <TextView
            android:id="@+id/facultyMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9322067937"
            android:textSize="14sp"
            android:textColor="@color/gray_text"
            android:drawableLeft="@drawable/call"
            android:drawablePadding="6dp"
            android:paddingBottom="2dp" />

        <!-- Faculty Department -->
        <TextView
            android:id="@+id/facultyDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department: Computer Science"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:paddingTop="8dp" />

        <!-- Faculty Position -->
        <TextView
            android:id="@+id/facultyPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position: Professor"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:textStyle="italic"
            android:paddingBottom="6dp" />

        <!-- Ask Doubt Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/askDoubtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Doubt"
            android:textAllCaps="false"
            android:textSize="16sp"
            app:cornerRadius="50dp"
            android:background="@drawable/gradient_bg_red"

            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:paddingVertical="10dp"
            android:paddingHorizontal="24dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
