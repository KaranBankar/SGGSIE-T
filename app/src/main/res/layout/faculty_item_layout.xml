<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"

    android:elevation="6dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Faculty Name -->
        <TextView
            android:id="@+id/facultyName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black" />

        <!-- Faculty Email -->
        <TextView
            android:id="@+id/facultyEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="johndoe@college.edu"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Faculty Mobile -->
        <TextView
            android:id="@+id/facultyMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9322067937"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <!-- Faculty Department -->
        <TextView
            android:id="@+id/facultyDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department: Computer Science"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="6dp"
            android:textStyle="bold" />

        <!-- Faculty Position -->
        <TextView
            android:id="@+id/facultyPosition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Position: Professor"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="2dp"
            android:textStyle="italic" />

        <!-- Ask Doubt Button -->
        <Button
            android:id="@+id/askDoubtBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask Doubt"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:backgroundTint="@color/teal_700"
            android:textColor="@android:color/white"
            android:layout_marginTop="10dp"
            android:padding="8dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
