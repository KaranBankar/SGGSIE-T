<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@color/material_grey_100">

    <!-- Material CardView for better elevation and shadow -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp"
        app:strokeColor="@color/primary_blue"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Title of the Complaint -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:lineHeight="24sp"/>

            <!-- Description -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Description"
                android:textSize="16sp"
                android:textColor="@color/material_grey_800"
                android:layout_marginTop="4dp"
                app:lineHeight="22sp"/>

            <!-- Complaint Type -->
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvComplaintType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complaint Type"
                android:textSize="14sp"
                android:textStyle="italic"
                android:textColor="@color/primary_blue"
                android:layout_marginTop="6dp"/>

            <!-- Elevated Image with Rounded Corners -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/ivComplaintImage"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.LargeComponent"
                app:strokeColor="@color/light_blue_background"
                app:strokeWidth="2dp"
                app:elevation="8dp"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
