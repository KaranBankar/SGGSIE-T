        <activity android:name=".FacultyModule.FacultyCheatRecordsActivity" android:exported="false" />
        <activity android:name=".Login" android:exported="false" android:theme="@style/Base.Theme.SGGSIET" />
        <activity android:name=".DisplayElectionPositions" android:exported="true" />
        <activity android:name=".AdminModule.PrincipalDashboard" android:exported="true" />
        <activity android:name=".FacultyModuleActivity" android:exported="true" />
        <activity android:name=".StudentModule.BudgetRequestTracking" android:exported="true"
            android:theme="@style/Base.Theme.SGGSIET"/>
        <activity android:name=".StudentModule.BudgetRequestSubmission" android:exported="true"
            android:theme="@style/Base.Theme.SGGSIET"/>

        <activity android:name=".SplashActivity" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".StudentModule.StudentDashboard" android:exported="false" />
        <activity android:name=".StudentModule.EventsActivity" android:exported="false" />
        <activity android:name=".StudentModule.HealthReportActivity" android:exported="false" android:theme="@style/Base.Theme.SGGSIET" />
        <activity android:name=".StudentModule.VotingActivity" android:exported="false" />
        <activity android:name=".StudentModule.ComplaintActivity" android:exported="false" />
        <activity android:name=".StudentModule.BudgetActivity" android:exported="false" />
        <activity android:name=".StudentModule.CheatRecordsActivity" android:exported="false" />
        <activity android:name=".UploadEvent" android:exported="false" />
        <activity android:name=".SubmitComplaint" android:exported="false" />
        <activity android:name=".AdminModule.LeavesManagement" android:exported="false" />
        <activity android:name=".AdminModule.HomeComplaints" android:exported="false" />
        <activity android:name=".AdminModule.FacilityRegistration" android:exported="false" />
        <activity android:name=".AdminModule.BudgetOverview" android:exported="false" />
        <activity android:name=".AdminModule.ElectionModule" android:exported="false" />
        <activity android:name=".DocterModule.DocterDashboard" android:exported="false" />
        <activity android:name=".DocterModule.AddStudentReport" android:exported="false" />
        <activity android:name=".DocterModule.ViewStudentReports" android:exported="false" />
        <activity android:name=".AdminModule.UploadData" android:exported="true" />
